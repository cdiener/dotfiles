# Enjoy! :)
##############################################
# Settings
##############################################
background yes
use_xft yes
xftfont DejaVu Mono:size=8
xftalpha 1
update_interval 1.0
total_run_times 0
own_window yes
own_window_transparent yes
own_window_type desktop
#own_window_argb_visual yes
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
double_buffer yes
minimum_size 200 200
maximum_width 240
draw_shades no
draw_outline no
draw_borders no
draw_graph_borders yes
default_color aaaaaa
default_shade_color 000000
default_outline_color 828282
alignment top_right
gap_x 10
gap_y 40
no_buffers yes
uppercase no
cpu_avg_samples 2
override_utf8_locale no
##############################################
#  Output
##############################################
TEXT
System
${hr 2}
Host:$alignr$nodename
Uptime:$alignr$uptime
Kernel:$alignr${sysname} ${kernel}

Resources
${hr 2}
CPU1: ${cpu cpu1}% ${goto 106} CPU2: ${cpu cpu2}%
${cpubar cpu1 8,95}$alignr${cpubar cpu2 8,95}
Mem:  ${mem}/${memmax}
${membar 5,200}
Swap: ${swap}/${swapmax}
${swapbar 5,200}

File Systems
${hr 2}
Disk: ${fs_used /}/${fs_size /}${goto 130}I/O:  ${diskio}
${diskiograph 10,200 00aa00 aa0000 0 -t}

Network (${if_existing /proc/net/route wlan0}${addr wlan0}${else}${if_existing /proc/net/route eth0}${addr eth0}${endif}${endif})
${hr 2}${if_existing /proc/net/route wlan0}
U:  ${upspeed wlan0}${goto 110}D: ${downspeed wlan0}
${upspeedgraph wlan0 10,95 ffffff aa0000 0 -t}$alignr${downspeedgraph wlan0 10,95 ffffff aa0000 0 -t}
${else}${if_existing /proc/net/route eth0}
U:  ${upspeed eth0}${goto 110}D: ${downspeed eth0}
${upspeedgraph eth0 10,95 ffffff aa0000 0 -t}$alignr${downspeedgraph eth0 10,95 ffffff aa0000 0 -t}${endif}${endif}
Processes
${hr 2}
command	${goto 120}cpu${alignr}mem
${top name 1}${goto 107}${top cpu 1}${alignr}${top mem_res 1}
${top name 2}${goto 107}${top cpu 2}${alignr}${top mem_res 2}
${top name 3}${goto 107}${top cpu 3}${alignr}${top mem_res 3}
${top name 4}${goto 107}${top cpu 4}${alignr}${top mem_res 4}
${top name 5}${goto 107}${top cpu 5}${alignr}${top mem_res 5}
${top name 6}${goto 107}${top cpu 6}${alignr}${top mem_res 6}
